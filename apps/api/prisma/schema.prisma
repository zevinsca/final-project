generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  STORE_ADMIN
  SUPER_ADMIN
}

model User {
  id          String   @id @default(uuid())
  firstName   String
  lastName    String
  email       String   @unique
  username    String   @unique
  password    String
  phoneNumber String?  @unique
  role        Role     @default(USER)
  createdAt   DateTime @default(now())
}
